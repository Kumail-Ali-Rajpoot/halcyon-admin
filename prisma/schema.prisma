generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Products {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  price              String
  discountPrice      String
  rating             String
  description        String
  featureDescription String
  relative           String
  category           String
  imageBase64        String
  imageType          String
  createdAt          DateTime @default(now())
}

model Complain {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  email       String
  name        String
  problem     String
  message     String
  createdAt   DateTime @default(now())
}
model Contact {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  email       String
  name        String
  topic       String
  message     String
  createdAt   DateTime @default(now())
}

model Order {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  phoneNumber String
  email       String
  address     String
  city        String
  firstName   String
  lastName    String
  region      String
  productId   String
  createdAt   DateTime @default(now())
}
model category {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  name        String
  createdAt   DateTime @default(now())
}

model tags {
  id           String   @id @map("_id") @default(auto()) @db.ObjectId
  tagName      String
  categoryName String
  createdAt    DateTime @default(now())
}